<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.UserMapper">

    <insert id="addUser" parameterType="com.pojo.User">
        insert into librarysystem.user(UserName,Password,Permission,Balance,BreachNum)
            value (#{UserName},#{Password},#{Permission},#{Balance},#{BreachNum});
    </insert>

    <delete id="deleteUserByUserId" parameterType="int">
        delete from librarysystem.user where UserId = #{UserId};
    </delete>

    <update id="updateUser" parameterType="com.pojo.User">
        update librarysystem.user
        set UserName = #{UserName},Password=#{Password},Permission=#{Permission},Balance=#{Balance},BreachNum=#{BreachNum}
        where UserId = #{UserId};
    </update>

    <select id="queryUserByUserId" parameterType="int" resultType="com.pojo.User">
        select * from librarysystem.user where UserId=#{UserId};
    </select>

    <select id="queryAllUser" resultType="com.pojo.User">
        select * from librarysystem.user;
    </select>


</mapper>